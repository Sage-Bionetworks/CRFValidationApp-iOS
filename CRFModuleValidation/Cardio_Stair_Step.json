                           "viewTheme"    : { "viewIdentifier": "Instruction", "storyboardIdentifier": "ActiveTaskSteps" }
                           },
                           {
                           "identifier"         : "heartRate.before",
                           "type"               : "transform",
                           "replacementSteps"   : [{ "identifier"   : "instruction",
